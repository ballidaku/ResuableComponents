<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="ballidaku.resuablecomponents.myRealm.RealmActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Name" android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.428" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:layout_marginRight="26dp"
        android:text="Save" app:layout_constraintBaseline_toBaselineOf="@+id/editText"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginEnd="26dp"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="366dp"
        android:layout_height="427dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" tools:layout_editor_absoluteX="12dp"/>

</android.support.constraint.ConstraintLayout>
